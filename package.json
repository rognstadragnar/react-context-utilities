  "repository": "rognstadragnar/react-create-context",
  "license": "MIT",
  "version": "0.0.1",
  "source": "src/main.ts",
  "main": "dist/react-create-context.js",
  "module": "dist/react-create-context.esm.js",
  "browser": "dist/react-create-context.umd.js",
  "devDependencies": {
    "@types/react": "^16.0.38",
    "microbundle": "^0.4.3",
    "prettier": "^1.10.2",
